{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react", // If using React JSX
    "allowJs": true, // Allow JavaScript files to be compiled.
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*","docs/**/*","static/**/*"],
  "exclude": ["node_modules"]
}

